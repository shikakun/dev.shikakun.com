<% if (post.link){ %>
  <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank">
    <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, date_format) %></time>
  </a>
<% } else if (post.title){ %>
  <a class="<%= class_name %>" href="<%- url_for(post.path) %>">
    <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, date_format) %></time>
  </a>
<% } %>
